<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="StoreItemStyle" TargetType="GridViewItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
    </Style>

    <Style x:Key="StandardStoreItemStyle" TargetType="GridViewItem" BasedOn="{StaticResource StoreItemStyle}">
        <Setter Property="VariableSizedWrapGrid.ColumnSpan" Value="1"/>
        <Setter Property="VariableSizedWrapGrid.RowSpan" Value="1"/>
    </Style>

    <Style x:Key="LargeStoreItemStyle" TargetType="GridViewItem" BasedOn="{StaticResource StoreItemStyle}">
        <Setter Property="VariableSizedWrapGrid.ColumnSpan" Value="2"/>
        <Setter Property="VariableSizedWrapGrid.RowSpan" Value="2"/>
    </Style>

    <Style x:Key="WideStoreItemStyle" TargetType="GridViewItem" BasedOn="{StaticResource StoreItemStyle}">
        <Setter Property="VariableSizedWrapGrid.ColumnSpan" Value="2"/>
        <Setter Property="VariableSizedWrapGrid.RowSpan" Value="1"/>
    </Style>

    <Style x:Key="TallStoreItemStyle" TargetType="GridViewItem" BasedOn="{StaticResource StoreItemStyle}">
        <Setter Property="VariableSizedWrapGrid.ColumnSpan" Value="1"/>
        <Setter Property="VariableSizedWrapGrid.RowSpan" Value="2"/>
    </Style>

</ResourceDictionary>
